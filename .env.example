# Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=startup_ideas
DB_USER=postgres
DB_PASSWORD=your_database_password_here
# For Render.com or other cloud providers, use DATABASE_URL instead:
# DATABASE_URL=postgresql://user:password@host:port/database

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Crunchbase API Configuration
CRUNCHBASE_API_KEY=your_crunchbase_api_key_here

# Product Hunt API Configuration
PRODUCT_HUNT_API_KEY=your_product_hunt_api_key_here

# Reddit API Configuration
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

# Beehiiv API Configuration
BEEHIIV_API_KEY=your_beehiiv_api_key_here
BEEHIIV_PUBLICATION_ID=your_beehiiv_publication_id_here
